<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E5E5E5" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Asset -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accounts_assets"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/account_setting_table_asset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#555555" >
        </TableLayout>

        <Button
            android:id="@+id/account_setting_asset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/account_setting_add_assets" />

        <!-- Liabilities -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accounts_liabilities"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/account_setting_table_liabilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TableLayout>

        <Button
            android:id="@+id/account_setting_liabilities_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/account_setting_add_liabilities" />

        <!-- Capital -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accounts_capital"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/account_setting_table_capital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TableLayout>

        <Button
            android:id="@+id/account_setting_capital_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/account_setting_add_capital" />

        <!-- Expenses -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accounts_expenses"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/account_setting_table_expenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TableLayout>

        <Button
            android:id="@+id/account_setting_expenses_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/account_setting_add_expenses" />

        <!-- Income -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accounts_income"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TableLayout
            android:id="@+id/account_setting_table_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TableLayout>

        <Button
            android:id="@+id/account_setting_income_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/account_setting_add_income" />
    </LinearLayout>

</ScrollView>
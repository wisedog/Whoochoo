<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:orientation="horizontal" 
    android:background="#E5E5E5"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    >
    <LinearLayout
        android:layout_width="40dip"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/transaction_listitem_head"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dip"
        >
        <TextView
            android:id="@+id/transaction_listitem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp">
            
        </TextView>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/transaction_listitem_item"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="" 
            android:textSize="16sp">
            
        </TextView>
        <TextView
            android:id="@+id/transaction_listitem_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="70dip"
            android:textSize="16sp">
            
        </TextView>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/transaction_listitem_left"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="" 
            android:textSize="16sp">
            
        </TextView>
        <TextView
            android:id="@+id/transaction_listitem_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="1"
            android:layout_marginLeft="70dip"
            android:textSize="16sp">
            
        </TextView>
        </LinearLayout>
        
    </LinearLayout>
    

</LinearLayout>